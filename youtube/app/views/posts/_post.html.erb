<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= post.description %>
  </p>

  <% if post.image.attached? %>
  <p>
  	<%= image_tag(post.image) %>
  </p>
  <% end %>

  <% if post.video.attached? %>
  <video controls>
  	<source src="<%= url_for(post.video) %>" type="video/mp4">
  		Your entity doesn't support mp4.
  </video>
  <% end %>

</div>
